<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <TextView android:layout_width="fill_parent"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_height="wrap_content" android:text="Fibonacci" />
  <EditText android:layout_height="wrap_content"
    android:layout_width="match_parent" android:id="@+id/text_n"
    android:inputType="number">
    <requestFocus></requestFocus>
  </EditText>
  <Button android:layout_height="wrap_content" android:id="@+id/button1"
    android:onClick="onClick" android:layout_width="match_parent"
    android:text="Button"></Button>
  <TextView android:text="TextView" android:id="@+id/text_out"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent" android:layout_height="match_parent"></TextView>
</LinearLayout>
